<%- include('header') -%>

<header class="heading heading--main">
  <span class="heading__category">Vefforritun</span>
  <h1 class="heading__title">Fyrirlestrar</h1>
</header>
<main>
  <div class="list">
    <div class="list__row">
      <% videos.forEach((video) => { %>
        <div class="list__col">
          <a href="/<%= video.slug %>" class="listItem">
            <div class="listItem__image <%= !video.poster ? 'listItem__image--empty' : '' %>">
              <% if (video.thumbnail) { %>
                <img src="<%= video.thumbnail %>" alt="">
              <% } %>
            </div>
            <div class="listItem__bottom">
              <div class="listItem__texts">
                  <span class="listItem__category">
                    <%= video.category %>
                  </span>
                <h2 class="listItem__title">
                  <%= video.title %>
                </h2>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    </div>
  </div>
</main>

<%- include('footer') -%>
